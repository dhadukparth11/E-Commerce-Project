<%- include('admin_header') %>
    <div class="main-container">
        <div class="pd-ltr-20 xs-pd-20-10">
            <div class="min-height-200px">
                <!-- Default Basic Forms Start -->
                <div class="pd-20 card-box mb-30">
                    <div class="clearfix">
                        <% if(flash.success && flash.success.length > 0) { %>
                            <div class="alert alert-success">
                                <%= flash.success %>
                              </div>
                        <% } %>

                        <% if(flash.error && flash.error.length > 0) { %>
                            <div class="alert alert-danger">
                                <%= flash.error %>
                              </div>
                        <% } %>
                        <div class="pull-left">
                            <h4 class="text-blue h4">Add Admin</h4>
                        </div>
                    </div>
                    <form method="post" action="/insertAdmin" enctype="multipart/form-data">
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Name</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" type="text" placeholder="Enter Your Name" name="name" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">E-mail</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" type="email" placeholder="Enter E-mail" name="email" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-12 col-md-2 col-form-label">Password</label>
                            <div class="col-sm-12 col-md-10">
                                <input class="form-control" type="password" placeholder="Enter Password"
                                    name="password" />
                            </div>
                        </div>

                        <% var city=['surat','vadodara','rajkot','bhavanagar'] %>
                            <div class="form-group row">
                                <label class="col-sm-12 col-md-2 col-form-label">Select City</label>
                                <div class="col-sm-12 col-md-10">
                                    <select class="custom-select col-12" name="city">
                                        <option selected="">--Select City--</option>
                                        <% city.map((v)=>{ %>
                                            <option value="<%= v %>">
                                                <%= v %>
                                            </option>
                                            <% }) %>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-12 col-md-2 col-form-label">Hobby</label>
                                <div class="custom-control custom-checkbox m-2">
                                    <input type="checkbox" class="custom-control-input" id="customCheck1" name="hobby[]"
                                        value="Reading" />
                                    <label class="custom-control-label" for="customCheck1">Reading</label>
                                </div>
                                <div class="custom-control custom-checkbox m-2">
                                    <input type="checkbox" class="custom-control-input" id="customCheck2" name="hobby[]"
                                        value="Music" />
                                    <label class="custom-control-label" for="customCheck2">Music</label>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-12 col-md-2 col-form-label">Gender</label>
                                <div class="custom-control custom-radio m-2">
                                    <input type="radio" id="customRadio1" name="gender" value="male" class="custom-control-input" />
                                    <label class="custom-control-label" for="customRadio1">Male</label>
                                </div>
                                <div class="custom-control custom-radio m-2">
                                    <input type="radio" id="customRadio2" name="gender"  value="female"class="custom-control-input" />
                                    <label class="custom-control-label" for="customRadio2">Female</label>
                                </div>
                            </div>

                            <div class="form-group">
                                <label>Textarea</label>
                                <textarea class="form-control" name="discription"></textarea>
                            </div>
                            <div class="form-group">
                                <label>Custom file input</label>
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" name="avatar"/>
                                    <label class="custom-file-label">Choose file</label>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>

                    </form>

                    <!-- Default Basic Forms End -->


                    <%- include('admin_footer') %>