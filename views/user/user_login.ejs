<%- include('user_header') %>

    <!-- Page Header End -->


    <!-- Checkout Start -->
    <div class="container  pt-100 pb-100">
        <div class="col-lg-12 justify-content-center d-flex">
            <form method="post" action="/user/userLoginData" class="">
                <% if(flash.error && flash.error.length> 0) { %>
                    <div class="alert alert-danger">
                        <%= flash.error %>
                    </div>
                    <% } %>
                <h2 class="text-center mt-4 mb-3">Log in</h2>
                <div class="form-group mb-4">
                    <input type="email" class="form-control logininput" name="email" placeholder="Enter Email">
                </div>
                <div class="form-group mb-4">
                    <input type="password" class="form-control logininput" name="password" placeholder="Enter Password">
                </div>
                <div class="form-group d-flex justify-content-center mb-4">
                    <input type="submit" value="Log in" class="btn Loginbtn btn-block">
                </div>
                <div class="form-group mb-4">
                    <a href="/user/register" type="password" style="cursor: pointer;">Carete New Account</a>
                </div>
            </form>
        </div>
    </div>

    <%- include('user_footer') %>