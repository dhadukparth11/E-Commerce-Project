<script>
    var colorAll = document.querySelectorAll('.brandtypeData');
    for (var i = 0; i < colorAll.length; i++) {
        colorAll[i].addEventListener('change', getBrandValue);
    }
    let brandIds = []
    function getBrandValue() {
        if (this.checked) {
            brandIds.push(this.value);
        }
        else {
            var pos = -1;
            for (var i = 0; i < brandIds.length; i++) {
                if (brandIds[i] == this.value) {
                    pos = i;
                }
            }
            brandIds.splice(pos, 1);
        }

        $.ajax({
            url: '/user/findBrandWisedata',
            method: 'post',
            data: {
                'brandIds': brandIds
            },

            success: function (res) {
                $('#productFilterData').html(res);
            }
        })
    }
</script>

